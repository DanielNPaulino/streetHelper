<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Type of Problem"
        android:textSize="20sp"
        android:id="@+id/typeOfProblemTxtview"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Location of Problem"
        android:textSize="20sp"
        android:id="@+id/locationProblemTxtview"
        android:layout_below="@+id/typeOfProblemTxtview"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/problemImageView"
        android:layout_below="@+id/locationProblemTxtview"
        android:layout_marginBottom="5dp"/>



</RelativeLayout>