<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:background="#95C8D8">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/reportItemImgView"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/reportItemImgView"
            android:layout_toRightOf="@+id/reportItemImgView"
            android:id="@+id/reportItemTypeProblem"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2"
            android:textSize="15sp"
            android:layout_below="@+id/reportItemTypeProblem"
            android:layout_toEndOf="@+id/reportItemImgView"
            android:layout_toRightOf="@+id/reportItemImgView"
            android:id="@+id/reportLocationProblem"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            />
    </RelativeLayout>

</androidx.cardview.widget.CardView>